						<img 
							src="/images/service-section/leaf-2.png" 
							alt="Decorative leaf background for Medication Management service" 
							class="w-full h-full object-contain"
							style="width: 120%; height: 120%;"
							loading="lazy"
							width="360"
							height="480"
						/>
					</div>
					<!-- Text Label - Behind Human SVG -->
					<div class="absolute bottom-[10%] left-0 right-0 z-5">
						<h3 class="text-xl md:text-2xl font-bold text-[#fff8ed] text-center">
							Medication Management
						</h3>
					</div>
					<!-- Human SVG Illustration - Smaller -->
					<div class="absolute inset-0 flex items-center justify-center z-10" style="transform: translateY(-10%);">
						<img 
							src="/images/service-section/human-2.svg" 
							alt="Illustration showing caregiver managing medication for elderly resident" 
							class="object-contain"
							style="width: 80%; height: 80%;"
							loading="lazy"
							width="240"
							height="320"
						/>
					</div>
				</div>
			</div>

			<!-- Service 3: Personalized Care Plans -->
			<div class="flex flex-col items-center relative">
				<div class="relative w-full max-w-[300px] h-[400px] mb-0">
					<!-- Leaf Background - Bigger and Lower -->
					<div class="absolute inset-0 flex items-end justify-center z-0" style="transform: translateY(20%);">
						<img 
							src="/images/service-section/leaf-3.png" 
							alt="Decorative leaf background for Personalized Care Plans service" 
							class="w-full h-full object-contain"
							style="width: 120%; height: 120%;"
							loading="lazy"
							width="360"
							height="480"
						/>
					</div>
					<!-- Text Label - Behind Human SVG -->
					<div class="absolute bottom-[10%] left-0 right-0 z-5">
						<h3 class="text-xl md:text-2xl font-bold text-[#fff8ed] text-center">
							Personalized Care Plans
						</h3>
					</div>
					<!-- Human SVG Illustration - Smaller -->
					<div class="absolute inset-0 flex items-center justify-center z-10" style="transform: translateY(-10%);">
						<img 
							src="/images/service-section/human-3.svg" 
							alt="Illustration showing caregiver providing personalized care to resident" 
							class="object-contain"
							style="width: 80%; height: 80%;"
							loading="lazy"
							width="240"
							height="320"
						/>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
